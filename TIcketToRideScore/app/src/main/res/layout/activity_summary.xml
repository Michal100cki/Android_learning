<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rokers.tickettoridescore.SummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_summaryWinnerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="THE WINNER OF THE GAME IS:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_summaryWinnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryWinnerTitle"
            android:layout_margin="20dp"
            android:background="#ffcc00"
            android:textAlignment="center"
            android:textColor="#993300"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summaryCompareResults"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryWinnerName"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#ff6633"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summaryPartA"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryCompareResults"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:text="@string/summaryPointA"
            android:textAlignment="textStart"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPointsPartA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_summaryPartA"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_summaryPartA"
            android:paddingLeft="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPartB"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryPartA"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:text="@string/summaryPointB"
            android:textAlignment="textStart"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPointsPartB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_summaryPartB"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_summaryPartB"
            android:paddingLeft="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPartC"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryPartB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:text="@string/summaryPointC"
            android:textAlignment="textStart"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPointsPartC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_summaryPartC"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_summaryPartC"
            android:paddingLeft="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPartD"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryPartC"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:text="@string/summaryPointD"
            android:textAlignment="textStart"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryPointsPartD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_summaryPartD"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_summaryPartD"
            android:paddingLeft="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ffcc00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_summaryTotal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summaryPartD"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:text="TOTAL"
            android:textAlignment="textStart"
            android:textColor="#ff6633"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summaryPointsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_summaryTotal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_summaryTotal"
            android:paddingLeft="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ff6633"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_summaryBackEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_summaryPointsTotal"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="50dp"
            android:background="#ffffcc"
            android:onClick="backToEnterName"
            android:text="Restart"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
